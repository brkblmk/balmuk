<?php
// PRIME EMS STUDIOS - Change Password URL
// Kullanıcıların şifre değişikliği için yönlendirme dosyası

// CORS headers for security
header('Access-Control-Allow-Origin: https://primeemsstudios.com');
header('Access-Control-Allow-Methods: GET, OPTIONS');
header('Access-Control-Allow-Headers: Content-Type');
header('X-Frame-Options: DENY');
header('X-Content-Type-Options: nosniff');
header('Referrer-Policy: strict-origin-when-cross-origin');

// Only allow GET requests
if ($_SERVER['REQUEST_METHOD'] !== 'GET') {
    http_response_code(405);
    echo json_encode([
        'error' => 'Method not allowed',
        'allowed_methods' => ['GET'],
        'change_password_url' => 'https://primeemsstudios.com/change-password.php'
    ]);
    exit;
}

// Return JSON response with change password URL
header('Content-Type: application/json');
echo json_encode([
    'change_password_url' => 'https://primeemsstudios.com/change-password.php',
    'description' => 'Prime EMS Studios şifre değiştirme sayfası',
    'security_features' => [
        'ssl_tls_encryption' => true,
        'password_complexity' => true,
        'two_factor_auth' => 'available',
        'session_management' => true,
        'audit_logging' => true
    ],
    'contact_support' => 'https://primeemsstudios.com/contact.php',
    'last_updated' => '2025-01-18'
]);
?>